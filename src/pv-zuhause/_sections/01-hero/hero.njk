{% set logo_url = logo_url | default('/assets/img/01-hero/LOGO_LP.avif') %}
{% set promo_href = promo_href | default('https://www.alabenergiesysteme.de/angebot-einholen/') %}
{% set promo_text = promo_text | default('Fördermittel 2025 nicht verpassen. Jetzt Anspruch prüfen & Angebot erhalten.') %}
{% set bg_url    = bg_url    | default('/assets/img/01-hero/anlage2_LP.avif') %}
{% set illu_url  = illu_url  | default('/assets/img/01-hero/anlage1_LP.avif') %}

<header class="header">
  <div class="header-container">
    <img src="{{ logo_url }}" alt="ALAB Logo" class="logo">
    <div class="header-right">
  <a href="{{ promo_href }}" class="promo-banner" target="_blank" rel="noopener">
    {{ promo_text }}
  </a>
</div>

  </div>
</header>

<section class="hero" id="home">
  <div class="hero-background"><img src="{{ bg_url }}" alt="Haus mit Photovoltaik-Anlage"></div>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <span class="hero-badge">Gemeinsam für Ihren Strompreis selbst</span>
    <h1 class="hero-title">Photovoltaik-Anlagen für<br>Ihr Eigenheim</h1>
    <p class="hero-subtitle">Bestimmen Sie Ihren Strompreis selbst – mit einer eigenen Solarfunkraftwerk von ALAB Energiesysteme.</p>
    <a href="#alab-planer" class="cta-button">Zum Solarplanrechner</a>
  </div>

  <div class="hero-illustration"><img src="{{ illu_url }}" alt="Solar Haus Illustration"></div>
</section>

